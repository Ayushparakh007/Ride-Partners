<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- EmailJS CDN v4 -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
    <script type="text/javascript">
        (function(){
            emailjs.init({
                publicKey: "b0sCqsNNm7gNR-qzR"
            });
        })();
    </script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .booking-card {
            transition: all 0.3s ease;
            border: 2px solid #e5e7eb;
        }
        .booking-card:hover {
            border-color: #3b82f6;
            box-shadow: 0 10px 25px rgba(59, 130, 246, 0.1);
            transform: translateY(-5px);
        }
        .badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.4);
        }
        .modal.active {
            display: block;
        }
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 90%;
            max-width: 600px;
            border-radius: 15px;
        }
    </style>
</head>
<body class="bg-gray-50">
<%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-12">
        <!-- Header -->
        <div class="mb-12 text-center">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">Available Bookings</h1>
            <p class="text-xl text-gray-600">Find rides booked by other users and join them. Send a request to the ride owner!</p>
        </div>

        <!-- Loading Spinner -->
        <div id="loading" class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>

        <!-- Bookings Grid -->
        <div id="bookings-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" style="display:none;">
            <!-- Bookings will be loaded here -->
        </div>

        <!-- No Bookings Message -->
        <div id="no-bookings" class="text-center py-12" style="display:none;">
            <p class="text-xl text-gray-600">No bookings available at the moment.</p>
        </div>
    </div>

    <!-- Join Request Modal -->
    <div id="joinModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2 class="text-2xl font-bold mb-6">Request to Join Ride</h2>
            
            <div class="mb-4">
                <p class="text-gray-700"><strong>Route:</strong> <span id="modal-route"></span></p>
                <p class="text-gray-700"><strong>Date:</strong> <span id="modal-date"></span></p>
                <p class="text-gray-700"><strong>Time:</strong> <span id="modal-time"></span></p>
                <p class="text-gray-700"><strong>Owner:</strong> <span id="modal-owner"></span></p>
            </div>

            <form id="joinRequestForm">
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Your Message (Optional)</label>
                    <textarea id="requestMessage" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" rows="4" placeholder="Tell them about yourself..."></textarea>
                </div>

                <div class="flex gap-4">
                    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold transition">
                        Send Request
                    </button>
                    <button type="button" onclick="closeModal()" class="flex-1 bg-gray-400 hover:bg-gray-500 text-white py-3 rounded-lg font-semibold transition">
                        Cancel
                    </button>
                </div>
            </form>

            <div id="formMessage" class="mt-4 p-4 rounded-lg text-center" style="display:none;"></div>
        </div>
    </div>

    <script>
        let currentBookingData = null;

        // Fetch bookings on page load
        async function loadBookings() {
            try {
                const response = await fetch(`/api/bookings?email=${encodeURIComponent('<%= user.email %>')}`);
                const result = await response.json();
                console.log('Bookings result:', result);

                const container = document.getElementById('bookings-container');
                const loading = document.getElementById('loading');
                const noBookings = document.getElementById('no-bookings');

                loading.style.display = 'none';

                if (result.success && result.data && result.data.length > 0) {
                    console.log('Displaying', result.data.length, 'bookings');
                    container.style.display = 'grid';
                    container.innerHTML = result.data.map(booking => {
                        const bookingDate = new Date(booking.booking_date).toLocaleDateString();
                        const userName = (booking.user_name || '').replace(/'/g, "\\'");
                        const pickup = (booking.pickup_location || '').replace(/'/g, "\\'");
                        const dest = (booking.destination || '').replace(/'/g, "\\'");
                        const userEmail = booking.user_email || '';
                        const notes = booking.special_notes ? `<div class="bg-yellow-50 p-3 rounded-lg mb-4"><p><strong>Notes:</strong> ${booking.special_notes}</p></div>` : '';
                        
                        return `
                        <div class="booking-card bg-white rounded-lg p-6 shadow-md">
                            <div class="mb-4">
                                <h3 class="text-xl font-bold text-gray-800 mb-2">
                                    <i class="fas fa-location-dot text-red-500 mr-2"></i>${pickup}
                                    <i class="fas fa-arrow-right mx-2 text-gray-400"></i>
                                    <i class="fas fa-location-dot text-green-500 mr-2"></i>${dest}
                                </h3>
                            </div>

                            <div class="space-y-2 mb-4 text-gray-600">
                                <p><strong>Date:</strong> ${bookingDate}</p>
                                <p><strong>Time:</strong> ${booking.booking_time || 'Not specified'}</p>
                                <p><strong>Passengers:</strong> ${booking.passengers || 'Not specified'}</p>
                                <p><strong>Vehicle:</strong> ${booking.vehicle_type || 'Not specified'}</p>
                            </div>

                            <div class="bg-blue-50 p-3 rounded-lg mb-4">
                                <p><strong>Owner:</strong> ${userName}</p>
                                <p><strong>Phone:</strong> ${booking.user_phone}</p>
                            </div>

                            ${notes}

                            <button 
                                class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-semibold transition"
                                onclick="openJoinModal({id: ${booking.id}, pickup: '${pickup}', destination: '${dest}', date: '${bookingDate}', time: '${booking.booking_time || 'Not specified'}', owner: '${userName}', owner_email: '${userEmail}'})"
                            >
                                Request to Join
                            </button>
                        </div>
                    `;
                    }).join('');
                } else {
                    noBookings.style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading bookings:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('no-bookings').style.display = 'block';
                document.getElementById('no-bookings').innerHTML = '<p class="text-red-600 text-xl">Error loading bookings</p>';
            }
        }

        function openJoinModal(booking) {
            currentBookingData = booking;
            document.getElementById('modal-route').textContent = `${booking.pickup} → ${booking.destination}`;
            document.getElementById('modal-date').textContent = booking.date;
            document.getElementById('modal-time').textContent = booking.time;
            document.getElementById('modal-owner').textContent = booking.owner;
            document.getElementById('requestMessage').value = '';
            document.getElementById('formMessage').style.display = 'none';
            document.getElementById('joinModal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('joinModal').classList.remove('active');
            currentBookingData = null;
        }

        // Handle join request submission
        document.getElementById('joinRequestForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const userEmail = '<%= user.email %>';
            const userName = '<%= user.name1 %>';
            const message = document.getElementById('requestMessage').value;

            try {
                // Save join request to database
                const response = await fetch('/api/join-request', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        booking_id: currentBookingData.id,
                        requester_email: userEmail,
                        requester_name: userName,
                        requester_phone: '<%= user.phone_number %>',
                        message: message
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Send email to ride owner using EmailJS
                    if (typeof emailjs !== 'undefined' && emailjs.send) {
                        emailjs.send('service_5mpykhv', 'template_3qb2iiv', {
                            to_email: currentBookingData.owner_email,
                            to_name: currentBookingData.owner,
                            from_name: userName,
                            from_email: userEmail,
                            ride_route: `${currentBookingData.pickup} → ${currentBookingData.destination}`,
                            ride_date: currentBookingData.date,
                            ride_time: currentBookingData.time,
                            requester_phone: '<%= user.phone_number %>',
                            message: message || 'Hi, I would like to join your ride!'
                        }).then(() => {
                            showFormMessage('success', 'Request sent successfully! The ride owner will contact you soon.');
                            setTimeout(() => {
                                closeModal();
                                loadBookings();
                            }, 2000);
                        }).catch((error) => {
                            console.error('Email send error:', error);
                            showFormMessage('success', 'Request submitted! Note: Email notification could not be sent.');
                        });
                    } else {
                        showFormMessage('success', 'Request submitted successfully!');
                        setTimeout(() => {
                            closeModal();
                            loadBookings();
                        }, 2000);
                    }
                } else {
                    showFormMessage('error', 'Error submitting request: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showFormMessage('error', 'An error occurred. Please try again.');
            }
        });

        function showFormMessage(type, message) {
            const msgDiv = document.getElementById('formMessage');
            msgDiv.textContent = message;
            msgDiv.style.display = 'block';
            msgDiv.className = 'mt-4 p-4 rounded-lg text-center ' + 
                (type === 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700');
        }

        // Load bookings when page loads
        window.addEventListener('load', function() {
            loadBookings();
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('joinModal');
            if (event.target == modal) {
                closeModal();
            }
        };
    </script>

</body>
</html>
