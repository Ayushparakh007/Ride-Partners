<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
  min-height: 100vh;
  font-family: 'Poppins', sans-serif;
}

.profile-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.profile-card {
  background: rgba(240, 253, 244, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24px;
  padding: 3rem;
  box-shadow: 0 20px 40px rgba(34, 197, 94, 0.1);
  max-width: 450px;
  width: 100%;
  text-align: center;
  transition: all 0.3s ease;
  border: 1px solid rgba(34, 197, 94, 0.2);
}

.profile-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 30px 60px rgba(34, 197, 94, 0.2);
}

.profile-image {
  position: relative;
  margin-bottom: 2rem;
}

.profile-avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  border: 4px solid #22c55e;
  object-fit: cover;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(34, 197, 94, 0.3);
}

.profile-avatar:hover {
  transform: scale(1.1);
  box-shadow: 0 15px 40px rgba(34, 197, 94, 0.4);
}

.profile-info {
  margin-bottom: 2rem;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  border-bottom: 1px solid rgba(34, 197, 94, 0.2);
  transition: all 0.3s ease;
}

.info-item:hover {
  background: rgba(34, 197, 94, 0.1);
  border-radius: 12px;
  padding: 1rem;
  margin: 0 -1rem;
}

.info-label {
  font-weight: 600;
  color: #166534;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.info-value {
  font-weight: 500;
  color: #15803d;
  font-size: 1rem;
  text-align: right;
  flex: 1;
  margin-left: 1rem;
}

.edit-btn {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: white;
  border: none;
  padding: 1rem 2rem;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 2rem;
  width: 100%;
}

.edit-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(34, 197, 94, 0.3);
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.social-link {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #86efac; /* light green */
  color: #000; /* Black text */
  text-decoration: none;
  transition: all 0.3s ease;
  font-size: 1.2rem;
  border: 2px solid #4ade80; /* green-400 for border */
}

.social-link:hover {
  transform: translateY(-3px) scale(1.1);
  box-shadow: 0 10px 25px rgba(34, 197, 94, 0.4);
  color: #000;
  background: #4ade80; /* green-400 on hover */
}

.join-date {
  background: rgba(34, 197, 94, 0.1);
  color: #15803d;
  padding: 0.8rem 1.5rem;
  border-radius: 12px;
  font-weight: 500;
  font-size: 0.9rem;
  display: inline-block;
}

/* Animation classes */
.fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in {
  animation: slideIn 0.6s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Responsive design */
@media (max-width: 768px) {
  .profile-container {
    padding: 1rem;
  }
  
  .profile-card {
    padding: 2rem;
  }
  
  .info-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .info-value {
    text-align: left;
    margin-left: 0;
  }
}
</style>

