<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Signup - Ride Partner</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .signup-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }
        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }
        .input-group input {
            transition: all 0.3s ease;
        }
        .input-group input:focus {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.2);
        }
        .floating-label {
            position: absolute;
            top: 50%;
            left: 1rem;
            transform: translateY(-50%);
            transition: all 0.3s ease;
            pointer-events: none;
            color: #6b7280;
        }
        .input-group input:focus + .floating-label,
        .input-group input:not(:placeholder-shown) + .floating-label {
            top: -0.5rem;
            left: 0.75rem;
            font-size: 0.75rem;
            color: #667eea;
            background: white;
            padding: 0 0.25rem;
        }
        .btn-signup {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
        }
        .btn-signup:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }
        .alert {
            animation: slideIn 0.3s ease;
        }
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">
    <!-- Main Signup Container -->
    <div class="signup-container w-full max-w-md p-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-user-shield text-white text-2xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Admin Registration</h1>
            <p class="text-gray-600">Create an admin account for Ride Partner</p>
        </div>

        <!-- Error Messages -->
        <% if (typeof error !== 'undefined') { %>
            <% if (error === 'admin_exists') { %>
                <div class="alert bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    Admin with this username or email already exists.
                </div>
            <% } else if (error === 'server_error') { %>
                <div class="alert bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
                    <i class="fas fa-server mr-2"></i>
                    Server error. Please try again later.
                </div>
            <% } %>
        <% } %>

        <!-- Signup Form -->
        <form action="/admin-signup" method="POST" class="space-y-6">
            <div class="input-group">
                <input 
                    type="text" 
                    name="fullName" 
                    placeholder=" "
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                >
                <label class="floating-label">
                    <i class="fas fa-user mr-2"></i>Full Name
                </label>
            </div>

            <div class="input-group">
                <input 
                    type="text" 
                    name="username" 
                    placeholder=" "
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                >
                <label class="floating-label">
                    <i class="fas fa-at mr-2"></i>Username
                </label>
            </div>

            <div class="input-group">
                <input 
                    type="email" 
                    name="email" 
                    placeholder=" "
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                >
                <label class="floating-label">
                    <i class="fas fa-envelope mr-2"></i>Email Address
                </label>
            </div>

            <div class="input-group">
                <input 
                    type="password" 
                    name="password" 
                    placeholder=" "
                    required
                    minlength="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                >
                <label class="floating-label">
                    <i class="fas fa-lock mr-2"></i>Password (min 6 characters)
                </label>
            </div>

            <button 
                type="submit" 
                class="btn-signup w-full text-white py-3 px-4 rounded-lg font-semibold text-lg"
            >
                <i class="fas fa-user-plus mr-2"></i>
                Create Admin Account
            </button>
        </form>

        <!-- Footer -->
        <div class="text-center mt-8 pt-6 border-t border-gray-200">
            <p class="text-gray-500 text-sm mb-4">
                Already have an admin account?
            </p>
            <a href="/admin-login" class="text-blue-600 hover:text-blue-800 font-semibold">
                <i class="fas fa-sign-in-alt mr-1"></i>
                Admin Login
            </a>
            <div class="mt-4">
                <a href="/" class="text-gray-500 hover:text-gray-700 text-sm">
                    <i class="fas fa-arrow-left mr-1"></i>
                    Back to main site
                </a>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <h3 class="text-sm font-semibold text-yellow-800 mb-2">
                <i class="fas fa-shield-alt mr-1"></i>
                Security Notice
            </h3>
            <p class="text-xs text-yellow-700">
                Admin accounts have full access to the booking management system. 
                Please ensure you use a strong password and keep your credentials secure.
            </p>
        </div>
    </div>

    <script>
        // Form validation and loading state
        document.querySelector('form').addEventListener('submit', function(e) {
            const fullName = document.querySelector('input[name="fullName"]').value.trim();
            const username = document.querySelector('input[name="username"]').value.trim();
            const email = document.querySelector('input[name="email"]').value.trim();
            const password = document.querySelector('input[name="password"]').value.trim();
            
            if (!fullName || !username || !email || !password) {
                e.preventDefault();
                alert('Please fill in all fields.');
                return;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long.');
                return;
            }
            
            // Show loading state
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Creating Account...';
            submitBtn.disabled = true;
        });

        // Auto-focus on first input
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('input[name="fullName"]').focus();
        });

        // Username validation (alphanumeric only)
        document.querySelector('input[name="username"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^a-zA-Z0-9]/g, '');
            e.target.value = value;
        });

        // Password strength indicator
        document.querySelector('input[name="password"]').addEventListener('input', function(e) {
            const password = e.target.value;
            const strength = getPasswordStrength(password);
            
            // Visual feedback could be added here
            if (password.length > 0 && password.length < 6) {
                e.target.style.borderColor = '#dc3545';
            } else if (password.length >= 6) {
                e.target.style.borderColor = '#28a745';
            } else {
                e.target.style.borderColor = '#e1e5e9';
            }
        });

        function getPasswordStrength(password) {
            let strength = 0;
            if (password.length >= 6) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            return strength;
        }
    </script>
</body>
</html>
