<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .request-card {
            border-left: 4px solid #3b82f6;
            transition: all 0.3s ease;
        }
        .request-card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .badge-pending {
            background: #fef3c7;
            color: #92400e;
        }
        .badge-accepted {
            background: #d1fae5;
            color: #065f46;
        }
        .badge-rejected {
            background: #fee2e2;
            color: #7f1d1d;
        }
    </style>
</head>
<body class="bg-gray-50">
<%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-12">
        <!-- Navigation Buttons -->
        <div class="mb-8 grid grid-cols-1 md:grid-cols-4 gap-4">
            <a href="/index5" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-center font-semibold transition">
                <i class="fas fa-plus mr-2"></i>Book a Ride
            </a>
            <a href="/view-bookings" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg text-center font-semibold transition">
                <i class="fas fa-search mr-2"></i>Find Rides
            </a>
            <a href="/my-bookings" class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg text-center font-semibold transition">
                <i class="fas fa-calendar-check mr-2"></i>My Bookings
            </a>
            <a href="/my-requests" class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg text-center font-semibold transition border-2 border-orange-800">
                <i class="fas fa-handshake mr-2"></i>My Requests
            </a>
        </div>

        <!-- Header -->
        <div class="mb-12">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">My Join Requests</h1>
            <p class="text-xl text-gray-600">Track the status of your ride join requests</p>
        </div>

        <!-- Loading Spinner -->
        <div id="loading" class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>

        <!-- Requests Container -->
        <div id="requests-container" style="display:none;">
            <!-- Requests will be loaded here -->
        </div>

        <!-- No Requests Message -->
        <div id="no-requests" class="text-center py-12" style="display:none;">
            <p class="text-xl text-gray-600 mb-4">You haven't sent any join requests yet.</p>
            <a href="/view-bookings" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg inline-block">Browse Available Rides</a>
        </div>
    </div>

    <script>
        // Load join requests on page load
        async function loadRequests() {
            try {
                const userEmail = '<%= user.email %>';
                const response = await fetch(`/api/my-requests?email=${encodeURIComponent(userEmail)}`);
                const result = await response.json();

                const container = document.getElementById('requests-container');
                const loading = document.getElementById('loading');
                const noRequests = document.getElementById('no-requests');

                loading.style.display = 'none';

                if (result.success && result.data.length > 0) {
                    container.style.display = 'block';
                    container.innerHTML = result.data.map(req => {
                        let badgeColor = 'badge-pending';
                        let statusIcon = '<i class="fas fa-hourglass-half text-yellow-500 mr-2"></i>';
                        
                        if (req.status === 'accepted') {
                            badgeColor = 'badge-accepted';
                            statusIcon = '<i class="fas fa-check-circle text-green-500 mr-2"></i>';
                        } else if (req.status === 'rejected') {
                            badgeColor = 'badge-rejected';
                            statusIcon = '<i class="fas fa-times-circle text-red-500 mr-2"></i>';
                        }
                        
                        return `
                            <div class="request-card bg-white rounded-lg p-6 shadow-md mb-6">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="text-2xl font-bold text-gray-800">
                                            <i class="fas fa-location-dot text-red-500 mr-2"></i>${req.pickup_location}
                                            <i class="fas fa-arrow-right mx-2 text-gray-400"></i>
                                            ${req.destination}
                                        </h3>
                                        <p class="text-gray-600 mt-2">
                                            <i class="fas fa-calendar mr-2"></i>${new Date(req.booking_date).toLocaleDateString()}
                                            <span class="mx-2">•</span>
                                            <i class="fas fa-clock mr-2"></i>${req.booking_time || 'Not specified'}
                                        </p>
                                    </div>
                                    <span class="badge ${badgeColor} px-4 py-2 rounded-full text-sm font-semibold flex items-center">
                                        ${statusIcon}${req.status.toUpperCase()}
                                    </span>
                                </div>

                                <div class="bg-blue-50 p-4 rounded-lg mb-4">
                                    <p class="text-gray-700"><strong>Ride Owner:</strong> ${req.user_name}</p>
                                    <p class="text-gray-700"><strong>Owner Phone:</strong> ${req.user_phone}</p>
                                </div>

                                ${req.message ? `
                                    <div class="bg-gray-50 p-4 rounded-lg mb-4">
                                        <p class="text-gray-700"><strong>Your Message:</strong></p>
                                        <p class="text-gray-600 italic">"${req.message}"</p>
                                    </div>
                                ` : ''}

                                <div class="flex justify-between items-center text-sm text-gray-500">
                                    <p>Requested: ${new Date(req.created_at).toLocaleDateString()}</p>
                                    ${req.response_at ? `<p>Responded: ${new Date(req.response_at).toLocaleDateString()}</p>` : ''}
                                </div>

                                ${req.status === 'accepted' ? `
                                    <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
                                        <p class="text-green-700"><strong>✓ Request Accepted!</strong></p>
                                        <p class="text-green-600 text-sm mt-1">The ride owner has accepted your request. Contact them to confirm the details.</p>
                                    </div>
                                ` : ''}

                                ${req.status === 'rejected' ? `
                                    <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
                                        <p class="text-red-700"><strong>✗ Request Rejected</strong></p>
                                        <p class="text-red-600 text-sm mt-1">Unfortunately, your request was not accepted. Try another ride!</p>
                                    </div>
                                ` : ''}
                            </div>
                        `;
                    }).join('');
                } else {
                    noRequests.style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading requests:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('no-requests').style.display = 'block';
                document.getElementById('no-requests').innerHTML = '<p class="text-red-600 text-xl">Error loading requests</p>';
            }
        }

        // Load requests when page loads
        window.addEventListener('load', loadRequests);
    </script>
</body>
</html>
